{% extends '::base.html.twig' %}

{% block title %}
    {{ zodiac.zodiacInfo.name }}
{% endblock %}

{% block body %}
    <h1>Horoscope {{ zodiac.zodiacInfo.name }}</h1>

    <p>
        Horoscope {{ zodiac.zodiacInfo.name }} du {{ zodiac.date|date('d M Y') }}
    </p>
    
    <div class="pull-left panel panel-primary" style="width:250px;margin-right: 15px">
        <div class="panel-heading">
            <h3 class="panel-title">Amour</h3>
        </div>
        <div class="panel-body">
            {{ zodiac.amour }}
        </div>
    </div>
        
    <div class="pull-left panel panel-primary" style="width:250px;margin-right: 15px">
        <div class="panel-heading">
            <h3 class="panel-title">Travail</h3>
        </div>
        <div class="panel-body">
            {{ zodiac.travail }}
        </div>
    </div>
    
        
    <div class="pull-left panel panel-primary" style="width:250px;margin-right: 15px">
        <div class="panel-heading">
            <h3 class="panel-title">Famille</h3>
        </div>
        <div class="panel-body">
            {{ zodiac.famille }}
        </div>
    </div>
    
{% endblock %}
